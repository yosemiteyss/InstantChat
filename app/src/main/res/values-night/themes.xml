<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.InstantChat.Splash.DayNight" parent="Theme.InstantChat.Splash.Dark"/>

    <style name="Theme.InstantChat.Splash.Dark" parent="Theme.InstantChat.Dark">
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
    </style>

    <style name="Theme.InstantChat.DayNight" parent="Theme.InstantChat.Dark"/>

    <style name="Theme.InstantChat.Dark" parent="Theme.InstantChat">
        <!-- Colors -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/blue_300</item>
        <item name="colorSecondary">@color/orange_300</item>
        <item name="colorSecondaryVariant">@color/orange_300</item>
        <item name="colorError">@color/red_200</item>
        <item name="colorPrimarySurfaceVariant">?attr/colorSurface</item>

        <item name="android:colorBackground">@color/black_900</item>
        <item name="colorSurface">@color/black_800</item>
        <item name="scrimBackground">@color/black_alpha_87</item>

        <item name="colorOnPrimary">@color/black_900</item>
        <item name="colorOnSecondary">@color/black_900</item>
        <item name="colorOnError">@color/black_900</item>
        <item name="colorOnBackground">@color/white_50</item>
        <item name="colorOnSurface">@color/white_50</item>

        <item name="elevationOverlayEnabled">true</item>

        <!-- System -->
        <item name="android:statusBarColor">@color/black_alpha_60</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>

    </style>

</resources>