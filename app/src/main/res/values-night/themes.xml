<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.InstantChat.Splash.DayNight" parent="Theme.InstantChat.Splash.Dark"/>

    <style name="Theme.InstantChat.Splash.Dark" parent="Theme.InstantChat.Dark">
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
    </style>

    <style name="Theme.InstantChat.DayNight" parent="Theme.InstantChat.Dark"/>

    <style name="Theme.InstantChat.Dark" parent="Theme.InstantChat">
        <!-- Colors -->
        <item name="colorPrimary">@color/indigo_200</item>
        <item name="colorPrimaryVariant">@color/indigo_300</item>
        <item name="colorSecondary">@color/orange_300</item>
        <item name="colorSecondaryVariant">@color/orange_300</item>
        <item name="colorError">@color/red_200</item>

        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/grey</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnError">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="colorPrimaryBackground">@color/black</item>
        <item name="colorOnPrimaryBackground">@color/white</item>
        <item name="textFieldOnPrimaryBackground">@color/grey</item>

        <item name="elevationOverlayEnabled">true</item>

        <!-- System -->
        <item name="android:statusBarColor">?attr/colorPrimaryBackground</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>

    </style>

</resources>