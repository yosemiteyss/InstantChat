<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlay.InstantChat.Avatar" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.InstantChat.BottomSheet" parent="">
        <item name="cornerSizeTopLeft">@dimen/medium_component_corner_radius</item>
        <item name="cornerSizeTopRight">@dimen/medium_component_corner_radius</item>
    </style>

    <style name="ShapeAppearance.InstantChat.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/small_component_corner_radius</item>
    </style>

    <style name="ShapeAppearance.InstantChat.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/medium_component_corner_radius</item>
    </style>

    <style name="ShapeAppearance.InstantChat.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/large_component_corner_radius</item>
        <item name="cornerSizeTopRight">@dimen/large_component_corner_radius</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <dimen name="small_component_corner_radius">4dp</dimen>
    <dimen name="medium_component_corner_radius">8dp</dimen>
    <dimen name="large_component_corner_radius">16dp</dimen>

</resources>